# Application Configuration
APP_NAME="Happy Homes Services API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
DATABASE_NAME="household_services"
DATABASE_MIN_CONNECTIONS=10
DATABASE_MAX_CONNECTIONS=100

# Security Configuration
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"
ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS,PATCH"
ALLOWED_HEADERS="*"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"
ALLOWED_IMAGE_EXTENSIONS="jpg,jpeg,png,gif,webp"

# Email Configuration (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true
FROM_EMAIL=""

# SMS Providers Configuration
# Twilio SMS Provider (Global)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""

# TextLocal SMS Provider (India)
TEXTLOCAL_ENABLED=false
TEXTLOCAL_API_KEY=""
TEXTLOCAL_SENDER=""
TEXTLOCAL_USE_HASH_AUTH=false
TEXTLOCAL_USERNAME=""
TEXTLOCAL_HASH_KEY=""

# Teleo SMS Provider (India)
TELEO_ENABLED=false
TELEO_USERNAME=""
TELEO_PASSWORD=""
TELEO_SENDER_ID=""

# AWS SNS Provider
AWS_SNS_ENABLED=false
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-south-1"

# SendGrid Email Provider
SENDGRID_ENABLED=false
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""
SENDGRID_FROM_NAME=""

# Mock Provider (Development)
MOCK_SIMULATE_FAILURES=false
MOCK_FAILURE_RATE=0.1

# External Services
GOOGLE_MAPS_API_KEY=""

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Redis Configuration (optional for caching)
REDIS_URL="redis://localhost:6379"

# Monitoring and Logging
SENTRY_DSN=""
LOG_JSON_FORMAT=false

# Development Settings
AUTO_RELOAD=true
SHOW_DOCS=true