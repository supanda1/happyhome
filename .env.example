# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment

# App Configuration
VITE_APP_NAME=Household Services
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional household services booking platform

# Environment
NODE_ENV=development
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# AWS Configuration
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_BUCKET=household-services-uploads
VITE_AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_REFRESH_TOKEN_EXPIRY=7d
VITE_ACCESS_TOKEN_EXPIRY=15m

# Database (for backend reference)
DATABASE_URL=postgresql://username:password@localhost:5432/household_services
REDIS_URL=redis://localhost:6379

# Email Service (for backend reference)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Integration (for backend reference)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Maps (if using maps)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_MAINTENANCE_MODE=false
VITE_ENABLE_QUERY_DEVTOOLS=true

# React Query Configuration
VITE_DEFAULT_STALE_TIME=300000
VITE_DEFAULT_CACHE_TIME=600000
VITE_MAX_RETRIES=3

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_CACHE_DURATION=86400